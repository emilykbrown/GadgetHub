@model IEnumerable<string>

@*Home buton*@
@Html.ActionLink("Home", "List", "Gadget", null,
    new {@class = "btn btn-outline-secondary w-100 btn-lg mb-2"})

@*Buttons for each category*@
@foreach(var link in Model)
{
   @Html.RouteLink(link, new {
    Controller = "Gadget",
    Action = "List",
    GadgetCategory = link,
    page = 1},
    new { @class = "btn btn-outline-secondary w-100 btn-lg mb-2"    
            + (link == ViewBag.SelectedGadgetCategpry ? "action" : "")
    })
}