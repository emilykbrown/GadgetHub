@model IEnumerable<GadgetHub.Domain.Entities.Gadget>

@{
    ViewBag.Title = "Admin: All Gadgets";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Gadgets</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">Gadget ID</th>
                    <th>Gadget Name</th>
                    <th class="text-right">Price</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gadget in Model)
                {
                    <tr>
                        <td>@gadget.GadgetID</td>
                        <td>
                            @Html.ActionLink(gadget.GadgetName, "Edit", new { id = gadget.GadgetID })
                        </td>
                        <td>@gadget.GadgetPrice.ToString("C")</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("GadgetID", gadget.GadgetID)
                                <input type="submit" value="Delete" class="btn btn-primary" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Add a new gadget", "Create", null, new { @class = "btn btn-primary" })
    </div>

    </div>