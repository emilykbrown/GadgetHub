@model GadgetHub.WebUI.Models.CartIndexViewModel

@{
    ViewBag.Title = "GadgetHub: Your Cart";
}

<h2>Your Cart</h2>

<table class="table">

    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th class="text-end">Price</th>
            <th class="text-end">Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <th class="text-center">@line.Quantity</th>
                <th>@line.Gadget.GadgetName</th>
                <th class="text-end">@line.Gadget.GadgetPrice.ToString("c")</th>
                <th class="text-end">@((line.Quantity * @line.Gadget.GadgetPrice).ToString("c"))</th>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
           <th colspan="3" class="text-end">Total</th>
           <th class="text-end">@Model.Cart.ComputeTotalValue().ToString("c")</th>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary">
       Continue Shopping
    </a>
</div>